# Fn Keys

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 2 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 2 && pkill -RTMIN+10 i3blocks 
bindsym XF86AudioMute exec --no-startup-id pamixer -t  && pkill -RTMIN+10 i3blocks

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec brightnessctl set +5% && pkill -RTMIN+9 i3blocks
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- && pkill -RTMIN+9 i3blocks

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous↑

# Toggle Screen
#bindcode 255 exec ~/scripts/toggle_screen.sh

# Power button
set $Locker ~/.config/i3/i3lock_customized.sh && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym XF86PowerOff mode "$mode_system"

bindsym --release Caps_Lock exec pkill -RTMIN+8 i3blocks


# Assign specific programs to workspaces
assign [class="^firefox$"] $ws1
